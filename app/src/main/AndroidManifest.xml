<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edward.mvpframework">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.CurrentApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.IndexActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BannerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.TopicActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.RouteDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.GuideDetailActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
