<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/item_me"
        android:id="@+id/me_infomation_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_me_infomation_height"
        android:background="@mipmap/bg_me_infomation">

        <!-- -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/riv_user_avatar"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/bg_avata_hint"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <FrameLayout
            android:id="@+id/me_infomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/riv_user_avatar">


        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_next" />
    </RelativeLayout>

</FrameLayout>