<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <item name="android:listDivider">@drawable/recyclerview_divide_decoration</item>
    </style>

    <style name="Index_RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/common_text_color_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- actionbar效果-->
    <style name="action_bar">
        <item name="android:background">#ffffff</item>
    </style>
    <!-- Style for action bar left/right item -->
    <style name="action_tab_lr">
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingLeft">13dp</item>
    </style>
    <style name="action_tab_lf">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">13dp</item>
    </style>

    <!-- item me -->
    <style name="item_me">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:layout_height">53dp</item>
    </style>

    <!-- item fragment input -->
    <style name="item_login_edittext">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- -->
    <style name="width_match_parent_button">
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
